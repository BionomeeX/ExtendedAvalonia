<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="300"
             xmlns:slider="using:ExtendedAvalonia.Slider"
             xmlns:v="using:ExtendedAvalonia"
             x:Class="ExtendedAvalonia.Impl.GradientPickerImpl">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="20" />
      <RowDefinition Height="*" />
      <RowDefinition Height="20" />
    </Grid.RowDefinitions>

    <slider:ExtendedSlider Grid.Row="0"
                      Name="SliderUp"></slider:ExtendedSlider>
    <v:RenderView Grid.Row="1"
                  Name="Renderer"></v:RenderView>
    <slider:ExtendedSlider Grid.Row="2"
                      Name="SliderDown"></slider:ExtendedSlider>
  </Grid>
</UserControl>
